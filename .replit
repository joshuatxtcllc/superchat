modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[env]
PYTHONPATH = "/nix/store"
PATH = "/nix/store/python3/bin:$PATH"

[deployment]
deploymentTarget = "autoscale"
run = ["/nix/store/python3/bin/python3", "-m", "streamlit", "run", "app.py", "--server.port", "5000", "--server.address", "0.0.0.0", "--server.headless", "true"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "/nix/store/python3/bin/python3 -m streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80